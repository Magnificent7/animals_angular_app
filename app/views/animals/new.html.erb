<%= form_tag '/animals', method: :post do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  <div>
    <%= label_tag :leg_count %>
    <%= number_field_tag :leg_count%> 
  </div>
  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description %>
  </div>
  <div>
    <%= radio_button_tag(:meat_eater, "true") %>
    <%= label_tag(:carnivore, "I eat meat") %>
    <%= radio_button_tag(:meat_eater, "false") %>
    <%= label_tag(:herbivore, "I'm a vegetarian") %>
  </div>
  <div>
    <%= submit_tag 'Create Animal'%>
  </div>

<% end %>